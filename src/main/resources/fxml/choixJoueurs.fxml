<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root type="Stage" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
               <ImageView fitHeight="577.0" fitWidth="610.0">
                  <image>
                     <Image url="@../images/choix.png" />
                  </image>
               </ImageView>
               <VBox alignment="CENTER" layoutX="5.0" layoutY="143.0">
                  <children>
                     <VBox fx:id="vBoxJoueur" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="600.0">
                        <children>
                           <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                              <children>
                                 <Label text="Sélectionnez le nombre de participants :">
                                    <font>
                                       <Font size="15.0" />
                                    </font></Label>
                                 <ComboBox fx:id="nbJoueurs" prefWidth="150.0" promptText="nbJoueurs" visibleRowCount="4" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                        <children>
                           <Label text="Sélectionnez votre plateau :">
                              <font>
                                 <Font size="15.0" />
                              </font></Label>
                           <ComboBox fx:id="plateau" prefWidth="150.0" promptText="plateau" />
                        </children>
                     </HBox>
                     <Button fx:id="valider" mnemonicParsing="false" text="Valider">
                        <VBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                        <padding>
                           <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
                        </padding>
                     </Button>
                  </children>
               </VBox>
            </children></AnchorPane>
        </Scene>
    </scene>
</fx:root>
